#!/usr/bin/env groovy

pipeline {
    agent {
        kubernetes {
            yamlFile 'KubernetesPod.yaml'
            retries 2
        }
    }
            
    stages {
        stage('SCM Get Code') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/piky/lets-quiz.git']]])
            }
        }
        
        stage('Run Python Script') {
            steps {
                sh '/usr/local/bin/python3 --version'
            }
        }
    }

}

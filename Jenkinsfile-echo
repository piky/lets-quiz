#!/usr/bin/env groovy

pipeline {
    agent {
        kubernetes {
            defaultContainer 'python3'
            yamlFile 'KubernetesPod.yaml'
            retries 2
        }
    }
            
    stages {
        stage('Run Python Script') {
            steps {
                sh '/usr/local/bin/python3 --version'
            }
        }
    }

}
